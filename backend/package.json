{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:auth": "wrangler dev -c wrangler.auth.jsonc",
    "deploy:auth": "wrangler deploy -c wrangler.auth.jsonc",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate": "npx prisma migrate dev --schema ./src/db/schema.prisma",
    "db:migrate:reset": "rm -rf .wrangler/state && npx prisma migrate reset --force --skip-seed --schema ./src/db/schema.prisma && npx prisma generate --schema ./src/db/schema.prisma",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "hono": "^4.9.0",
    "kysely": "^0.28.4",
    "kysely-d1": "^0.4.0",
    "prisma-kysely": "^1.8.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250810.0",
    "@types/better-sqlite3": "^7.6.13",
    "prisma": "^6.13.0",
    "tsx": "^4.19.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.4.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "typescript": "^5.6.3"
  }
}
